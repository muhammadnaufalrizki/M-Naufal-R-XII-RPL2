<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="col-md container mt-5">
        <div class="row grid gap-3">
            <% for(let a of jenis2){ %>
                <div class="card" style="width: 18rem;">
                    <img src="/uploads/<%= a.image %>" class="card-img-top" alt="" style="height: 200px; object-fit: contain;">
                    <div class="card-body">
                      <h4 class="card-title"><%= a.Nama_barang %></h4>
                      <h6>Harga : <%= uang(a.harga) %></h6>
                      <p class="card-text">Stok : <%= a.stock %></p>
                      <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                  </div>
            <% } %>
        </div>
    </div>
</body>
</html>